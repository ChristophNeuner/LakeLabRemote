@{
    ViewData["Title"] = "Users";
}

@model IEnumerable<AppUser>

<div class="panel-body bg-primary "><h4>User Accounts</h4></div>

<div class="text-danger" asp-validation-summary="ModelOnly"></div>

<table class="table table-condensed table-bordered">
    <tr><th>ID</th><th>Name</th><th>Email</th><th>Geräte</th></tr>
    @if (Model.Count() == 0)
    {
        <tr><td colspan="4" class="text-center">No User Accounts</td></tr>
    }
    else
    {
        foreach (AppUser user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    @if (user.Devices == null || user.Devices?.Count() == 0)
                    {
                        <p>Keine Geräte zugeordnert.</p>
                    }
                    else
                    {
                        @foreach (var device in user.Devices)
                        {
                            <div>@device?.Name</div>
                        }
                    }
                    <form asp-action="EditDevices" method="post" asp-route-id="@user.Id">
                        <button type="submit" class="btn btn-sm btn-primary">Edit Devices</button>
                    </form>
                <td>
                    <form asp-action="Delete" method="post" asp-route-id="@user.Id">
                        <a asp-action="Edit" class="btn btn-sm btn-primary" asp-route-id="@user.Id">Edit</a>
                        <button type="submit" class="btn btn-sm btn-danger ">Delete</button>
                    </form>
                </td>
            </tr>
        }
    }
</table>
<a class="btn btn-primary" asp-action="CreateUser">Create User</a>
