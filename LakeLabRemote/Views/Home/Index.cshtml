@{
    ViewData["Title"] = "Index";
}

@model IEnumerable<Value>

<a asp-action="DeleteAllValues" class="btn btn-primary btn-danger">Alle Werte löschen</a>

<div class="panel-body bg-primary"><h4>Werte</h4></div>

<table class="table table-condensed table-bordered">
    <tr><th>Zeit</th><th>Ort</th><th>Tiefe</th><th>O2-Gehalt (mg/l)</th><th>Temperatur</th></tr>
    @if (Model.Count() == 0)
    {
        <tr><td colspan="5" class="text-center">Keine Werte vorhanden.</td></tr>
    }
    else
    {
        @foreach(Value value in Model)
        {
            <tr><td>@value?.Timestamp</td><td>@value?.Device?.Location</td><td>@value?.Device?.Depth</td><td>@value?.Data</td></tr>
        }
    }
</table>


