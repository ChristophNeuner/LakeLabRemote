@{ 
    ViewData["Title"] = "Edit Device";
}
@model Device

<div class="bg-primary panel-body"><h4>Edit Device</h4></div>
<div asp-validation-summary="All" class="text-danger"></div>
<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="Id"></label>
        <input asp-for="Id" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Lake">Gewässer</label>
        <input asp-for="Lake" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Location">Genaue Stelle am Gewässer</label>
        <input asp-for="Location" class="form-control" />
    </div>
    @*<div class="form-group">
            <label asp-for="Depth">Tiefe</label>
            <br />
            <input asp-for="Depth" type="radio" value="surface" /> Oberfläche
            <br />
            <input asp-for="Depth" type="radio" value="ground" /> Grund
        </div>*@
    <div class="form-group">
        <label asp-for="Depth">Tiefe der Sensoren</label>
        <select class="form-control" asp-for="Depth"
                asp-items="@new SelectList(Enum.GetNames(typeof(Enums.Depth)))">
            <option disabled selected value="">Wähle eine Tiefe</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-default">Cancel</a>
</form>